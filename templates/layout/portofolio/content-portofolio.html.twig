<div class="wrapper-page">
    <div class="box-title">
        <div class="page-title">
            <h1><i class="fas fa-briefcase"></i></i> Mes projets</h1>
        </div>
    </div>
    <div class="portofolio-background"></div>
    <div class="cards">
        {%for project in projects %}
        <div class="card">
            <h2 class = "card-title">{{project.name}}</h2>
            <div class="crop-image">
                <a href="{{ path('solo-project', {slug: project.slug}) }}"><img src="{{ asset('images/projets/' ~ project.image1 ) }}
                "></a>
            </div> 
            <div class="card-name"> <a href="{{ path('solo-project', {slug: project.slug}) }}">En savoir plus</a></div>
        </div>
        {% endfor %}
    </div>
</div>


