<div class="wrapper-page">
    <div class="box-title">
        <div class="page-title">
            <h1><i class="fas fa-pencil-alt"></i> Exercices</h1>
        </div>
    </div>

    <div class="training-background"></div>

    <div class="training-container">
        <div class="cards">
        {% for exercice in exercices %}
            <div class="card">
                <div class="crop-image">
                    <a href="{{ path('solo-exercice', {slug: exercice.slug}) }}"><img src="{{ asset('images/training/image-target/'~ exercice.target) }}"></a>
                </div> 
                <div class="card-name">
                    <a href="{{ path('solo-exercice', {slug: exercice.slug}) }}">
                        <p> CSS BATTLE</p>
                        <p>{{exercice.name}}</p>
                    </a>
                </div>
            </div>
        {% endfor %}
        </div>
        <div class="category-menu">
            <img class = "category-button"src="{{ asset('images/boutons/platform.png') }}" alt="">
            {% for platform in platforms %} 
            <p>{{platform.name|capitalize}}</p>
            {% endfor %}    
        </div>
    </div>
</div>
