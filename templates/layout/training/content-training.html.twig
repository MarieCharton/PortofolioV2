{# Partie commune a toutes les pages  #}
<div class="wrapper-page">

    <div class="training-background"></div>
    {# Fin Partie commune a toutes les pages  #}

    <div class="article-page-container">
        <div class="cubes">

        {# Route Training  #}
            {% if app.request.get('_route') == 'training' %} 
            {% for exercice in exercices %}
            <div class="solo-cube">
                <a href="{{ path('exercice', {slug: exercice.slug}) }}">
                <img class= "image-cube"src="{{ asset('uploads/'~ exercice.target) }}" alt="image de l'exercice">
                <span>{{exercice.name}}</span>
                </a>
            </div> 
            {% endfor %}
            {% endif %}
     {# {{ knp_pagination_render(articles) }} #}



        {# Route Article par Cat√©gories #}
            {% if app.request.get('_route') == 'exercice_by_plaform' %}  
            {% for exerciceByPlatform in exercicesByPlatform %}
            <div class="solo-cube">
                <a href="{{ path('exercice', {slug: exerciceByPlatform.slug}) }}">
                <img class= "image-cube"src="{{ asset('uploads/'~ exerciceByPlatform.target) }}" alt="image de l'exercice">
                <span>{{exerciceByPlatform.name}}</span>
                </a>
            </div> 
            {% endfor %}
            {% endif %}

        {# Partie commune a toutes les pages  #}
        <div class="banner-categories-technologies">
            <img class = "category-button"src="{{ asset('images/boutons/platform.png') }}" alt="">
            {% for platform in platforms %} 
            <a href="{{ path('exercice_by_plaform', {id: platform.id}) }}"><p>{{platform.name|capitalize}}</p></a>
            {% endfor %}
        </div>
    </div>
</div>
{# FinPartie commune a toutes les pages  #}
