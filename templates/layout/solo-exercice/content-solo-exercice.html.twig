<div class="wrapper-page">
    <div class="box-title">
        <div class="page-title">
            <h1>{{ exercice.name }}</h1>
        </div>
    </div>
    <div class="container-exercice">
        <h3>Les difficultés : </h3>
        <p>{{ exercice.description|nl2br }}</p>
        <div class="technology-project">
            <h3>Exercice realisé sur : </h3>
            <div class="image-exercice">
                <img src="{{ asset('images/platform/' ~ exercice.platform.image) }}" alt="image-plateforme">
            </div>
            <h3>Lien de l'exercice : <a href="{{ exercice.link }}">{{ exercice.name }}</a> </h3>
        </div>
        <div class="preview-and-score">
            <div class="exercice-card">
                <p><i class="fas fa-bullseye"></i> Objectif</p>
                <img src="{{ asset('images/training/image-target/' ~ exercice.target ) }}" alt="{{ exercice.name }}">
                <img src="" alt="">
            </div>
            <div class="exercice-card">
                <p><i class="fas fa-signal"></i> Score</p>
                <img src="{{ asset('images/training/image-score/' ~ exercice.score ) }}" alt="{{ exercice.name }}">
            </div>
        </div>
        <div class="code">
            <div class="image-code">
                <p><i class="fas fa-terminal"></i> Code</p>
                <img src="{{ asset('images/training/image-code/' ~ exercice.code ) }}" alt="{{ exercice.name }}">
            </div>
        </div>
    </div>

</div>



