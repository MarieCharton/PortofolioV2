<div class="banner-training">
    <img class= "intro-training"src="{{ asset('images/banniere/training.png') }}" alt="">
</div>
<div class="section violet">
    <h2 class ="section-title">Mes derniers exercices</h2>
    <div class="last-three">
    {% for lastExercice in lastExercices %}
        <div class="box violet-box">
            <div class="image-box">
                <img class= "picture"src="{{ asset('uploads/' ~ lastExercice.target) }}" alt="">
            </div>
            <h3>{{lastExercice.name|capitalize}}</h3>
            <a href="{{ path('exercice', {slug: lastExercice.slug}) }}"><button class = " button-round orange-button">Voir l'exercice</button></a>
        </div>
    {% endfor %}
    </div>
</div>
<div class="see-all">
    <a href="{{ path ('training')}}"><button class = " button-round see-all-button see-all-button-violet"><i class="far fa-eye"></i> Voir tous les exercices</button></a>
</div>